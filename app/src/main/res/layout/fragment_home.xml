<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmenthome"
    android:layoutDirection="ltr"
    android:background="@android:color/background_light"
    android:fitsSystemWindows="true"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"
                android:id="@+id/tv_profile"


                >


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_image"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_margin="@dimen/_14sdp"
                    android:src="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_name"
                    android:hint="Alaa"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:textSize="22dp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:layout_toRightOf="@id/iv_image"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/city"
                    android:layout_below="@id/tv_name"
                    android:layout_toRightOf="@id/iv_image"
                    android:textColor="@color/white3"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bio"
                    android:textColor="@color/white3"
                    android:layout_below="@id/city"
                    android:layout_toRightOf="@id/iv_image"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_9ssp"
                    android:layout_marginRight="@dimen/_18sdp"/>
            </RelativeLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_below="@id/bio"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/shape_follow"
            android:layout_marginTop="@dimen/_10sdp">
            <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/tv_followers"
                android:textSize="@dimen/_14ssp"

                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_toRightOf="@id/tv_post"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"

                android:id="@+id/followers"
                android:layout_below="@id/tv_followers"
                android:text="Followers"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/white3"
                android:layout_toRightOf="@id/tv_post"
                />
            <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/tv_folowing"
                android:textSize="@dimen/_14ssp"
                android:layout_toRightOf="@id/followers"
                android:layout_marginLeft="@dimen/_8sdp"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="@dimen/_90sdp"
                android:textColor="@color/white3"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/folowing"
                android:layout_below="@id/tv_post"
                android:text="following"
                android:layout_toRightOf="@id/followers"
                android:layout_marginLeft="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                />
            <TextView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/tv_post"
                android:textSize="@dimen/_14ssp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="@dimen/_90sdp"
                android:textColor="@color/white3"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/post"
                android:layout_below="@id/tv_post"
                android:text="Posts"
                android:layout_marginLeft="@dimen/_6sdp"
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>