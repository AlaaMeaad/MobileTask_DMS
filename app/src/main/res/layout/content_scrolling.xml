<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".repositry.view.base.BaseActivity"
    tools:showIn="@layout/fragment_home">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_profile">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/followersddd"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@drawable/shape_follow"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/tv_followers"
                    android:textSize="@dimen/_16ssp"

                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_toRightOf="@id/tv_post"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"

                    android:id="@+id/followers"
                    android:layout_below="@id/tv_followers"
                    android:text="Followers"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/white3"
                    android:layout_toRightOf="@id/tv_post"
                    />
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/tv_folowing"
                    android:textSize="@dimen/_16ssp"
                    android:layout_toRightOf="@id/followers"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="@dimen/_90sdp"
                    android:textColor="@color/white3"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/folowing"
                    android:layout_below="@id/tv_post"
                    android:text="following"
                    android:layout_toRightOf="@id/followers"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:textSize="@dimen/_14ssp"
                    />
                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/tv_post"
                    android:textSize="@dimen/_16ssp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:textColor="@color/white3"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/post"
                    android:layout_below="@id/tv_post"
                    android:text="Posts"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>



</androidx.core.widget.NestedScrollView>